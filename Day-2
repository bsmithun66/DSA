#include <stdio.h>
#define MAX 5

int stack[MAX];
int top = -1;

// Function to push element
void push(int val) {
    if (top == MAX - 1) {
        printf("Stack is full. Cannot push %d\n", val);
    } else {
        stack[++top] = val;
        printf("%d pushed to stack\n", val);
    }
}

// Function to pop element
void pop() {
    if (top == -1) {
        printf("Stack is empty. Cannot pop\n");
    } else {
        printf("%d popped from stack\n", stack[top--]);
    }
}

// Function to check if stack is empty
void isEmpty() {
    if (top == -1)
        printf("The stack is empty.\n");
    else
        printf("The stack is not empty. Current size: %d\n", top + 1);
}

// Function to check if stack is full
void isFull() {
    if (top == MAX - 1)
        printf("The stack is full.\n");
    else
        printf("The stack is not full. Remaining capacity: %d\n", MAX - (top + 1));
}

int main() {
    int command, value;

    while (1) {
        scanf("%d", &command);

        switch (command) {
            case 1:
                scanf("%d", &value);
                push(value);
                break;
            case 2:
                pop();
                break;
            case 3:
                isEmpty();
                break;
            case 4:
                isFull();
                break;
            case 5:
                printf("Exiting...\n");
                return 0;
            default:
                printf("Invalid command\n");
        }
    }
    return 0;
}
